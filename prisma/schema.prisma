// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            String    @id @default(cuid()) @unique
  name          String? 
  email         String?   @unique 
  emailVerified DateTime?
  image         String?
  password      String?
  phoneNumber String? 
  role          UserRole @default(USER)
  accounts      Account[]
  isTwoFactorEnabled Boolean @default(false)
  twoFactorConfirmation TwoFactorConfirmation?
  invoice Boolean? @default(true)
  quotation Boolean? @default(true)
  receipt Boolean? @default(true)
  business Boolean? @default(false)
  employee Boolean? @default(false)
  customer Boolean? @default(false)
  product Boolean? @default(false)
  purchase Boolean? @default(false)
  payment Boolean? @default(false)
  telegramReport Boolean? @default(false)
  noting Boolean? @default(false)
  businessType Json?
  alarmTime String?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id String @id @default(cuid()) 
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(cuid())

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}

model Invoice {
  id String @id @default(cuid())
  ///////toggle stuff
  toggleName Boolean @default(false)
  toggleComp Boolean @default(false)
  togglePhone Boolean @default(false)
  toggleEmail Boolean @default(false)
  toggleAddr Boolean @default(false)
  togglePo Boolean @default(false)
  ////// -------------------------- /////
  toggleLogo Boolean @default(false)
  toggleBankInfo Boolean @default(false)
  toggleAddress Boolean @default(false)
  toggleSignature Boolean @default(false)
  //////toggle stuff
  invNo String?
  invPo String?
  invTitle String?
  invDate String?
  udpatedDate String?
  invBus String?
  invStatus String?
  invStaff Json?
  invNote String?
  items Json?
  mode String?
  partial Float?
  method String?
  discount Float?
  total Float?
  balance Float?
  noti Boolean @default(false)
  enableNote Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  customerId String 
  customer Customer @relation(fields: [customerId] , references: [id])
}

model Business {
  id String @id @default(cuid()) @unique
  busName String? @unique
  busEmail String
  busType String
  busAddr String?
  busPhone1 String?
  busPhone2 String?
  busTelegram String?
  busDes String?
  busInvkh String? 
  busInvEng String?
  busBankName String?
  busBankNumber String?
  busBankDes String?
  busPayTerm String?
  abaQr String?
  signature String?
  busLogo String?
  Rec1 String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quotation {
  id String @id @default(cuid())
  ///////toggle stuff 
  toggleName Boolean @default(false)
  toggleComp Boolean @default(false)
  togglePhone Boolean @default(false)
  toggleEmail Boolean @default(false)
  toggleAddr Boolean @default(false)
  ////// -------------------------- /////
  toggleLogo Boolean @default(false)
  toggleBankInfo Boolean @default(false)
  toggleAddress Boolean @default(false)
  toggleSignature Boolean @default(false)
  toggleEmployee Boolean @default(false)
  //////toggle stuff
  staffName String?
  staffPhone String?
  staffTelegram String?
  qtNo String?
  qtTitle String?
  qtDate String?
  udpatedDate String?
  qtBus String?
  qtStaff Json?
  qtImage1 String?
  qtImage2 String?
  prodDes Json?
  items Json?
  method String?
  total Float? 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  noti Boolean @default(true)
  enableNote Boolean @default(false)
  deletedAt DateTime?
  customerId String 
  customer Customer @relation(fields: [customerId] , references: [id])
}

model Receipt {
  id String @id @default(cuid())
  recFrom String?
  date String?
  updateDate String?
  payOf String?
  check String?
  usd Float?
  recNo String?
  recBus String?
  noti Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model Emp {
  id String @id @default( cuid()) @unique
  empName String? @unique
  empId String?
  empPhone String?
  empNational String?
  empAssc String?
  empAddr String?
  empCard String?
  empTelegram String?
  empGender String
  empOcc String?
  memberSince String?
  creatdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customer {
  id String @id @default(cuid()) @unique
  cusName String @unique
  cusTelegram String?
  cusBus String?
  cusPhone1 String?
  cusPhone2 String?
  cusComp String?
  cusMember String
  cusEmail String?
  cusAddr String?
  cusWebsite String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  invoices Invoice[]
  quotations Quotation[]
}

model Product {
  id String @id @default(cuid()) @unique
  prodItemName String
  prodUnitPrice Float
  prodBus String
  prodBusType String
  prodSince String
  proditemDes String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id String @id @default(cuid()) @unique
  purName String
  purPrice Float
  purBus String
  purSince String
  purDes String?
  purInvN String
  purSupp String?
  image1 String?
  image2 String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recently {
  id String @id @default(cuid()) @unique
  user String
  cust String 
  route String
  action String
  paperNo String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id String @id @default(cuid()) @unique
  title String
  text String?
  noteDate String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}